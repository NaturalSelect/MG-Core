@model IEnumerable<MG_Core.Models.HomeItemViewModel>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i == 0)
            {
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            }
            else
            {
                <li data-target="#myCarousel" data-slide-to="@i"></li>

            }

        }
        @if (Model.Count()==0)
        {
            <li data-target="#myCarousel" data-slide-to="@(Model.Count()+1)"></li>
        }
    </ol>
    <div class="carousel-inner" role="listbox">
       @for (int a = 0; a < Model.Count(); a++)
       {
           if (a == 0)
           {
            <div class="item active">
                <a href="@Model.ElementAt(a).JumpURL">
                    <img src="@Model.ElementAt(a).ImgURL" />
                    <div class="carousel-caption" role="option">
                        @Model.ElementAt(a).Introduction
                    </div>
                </a>
            </div>
           }
           else
           {
            <div class="item">
                <a href="@Model.ElementAt(a).JumpURL">
                    <img src="@Model.ElementAt(a).ImgURL"   />
                    <div class="carousel-caption" role="option">
                        @Model.ElementAt(a).Introduction
                    </div>
                </a>
            </div>
           }

       }
        @if (Model.Count() == 0)
        {
            <div class="item active">
                <img src="/images/banner1.svg" />
                <div class="carousel-caption" role="option">
                    <p>
                        欢迎使用MG_Core,基于ASP.NET Core编写的论坛.
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-default" asp-controller="Admin" asp-action="Index">
                                点此管理您的Home页
                            </a>
                        }
                    </p>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
